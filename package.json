{
  "name": "velocity-docs",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production node build.js",
    "check-formatting": "prettier --check 'src/**/*.ts{,x}'",
    "check-typing": "tsc --noEmit",
    "dev": "NODE_ENV=development node --env-file=.env build.js | pino-pretty",
    "fix-formatting": "prettier --write 'src/**/*.ts{,x}'",
    "fix-lint": "eslint --fix 'src/**/*.ts{,x}'",
    "lint": "eslint 'src/**/*.ts{,x}'",
    "start": "node --enable-source-maps ./.build/production/index.js"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/static": "8.3.0",
    "@hotwired/turbo": "8.0.18",
    "@nanoweb/jsx": "0.0.26",
    "@tailwindcss/typography": "0.5.19",
    "fastify": "5.6.1",
    "fuse.js": "7.1.0",
    "gray-matter": "4.0.3",
    "highlight.js": "11.11.1",
    "marked": "16.4.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "5.5.0",
    "@types/hotwired__turbo": "8.0.4",
    "@types/node": "24.8.1",
    "esbuild": "0.25.11",
    "eslint": "9.38.0",
    "eslint-plugin-promise": "7.2.1",
    "pino-pretty": "13.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "3.4.18",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1"
  }
}
