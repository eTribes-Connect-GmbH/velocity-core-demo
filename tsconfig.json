{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": ".build/server",
    "jsxImportSource": "@nanoweb/jsx",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "~/": ["./"],
      "~/*": ["./*"]
    }
  }
}
